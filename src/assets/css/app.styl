.clearfix:after,
.cf:after {
  visibility: hidden
  display: block
  font-size: 0;
  content: " "
  clear: both
  height: 0
  zoom: 1
}

* {
	box-sizing: border-box;
}

html, body {
	height: 100%;
}

body {
	font-family: Medium,'Microsoft Yahei', '微软雅黑', Helvetica, Arial, sans-serif;
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
	font-size: 14px;
	min-width: $page-width;
	// overflow hidden
}

#app {
	color: #606266;
	height:100%;
	min-width:1280px;
	background-size: 100% 100%;
	.main {
		height: 100%;
		width: calc(100% - 200px);
    	padding: 80px 20px 20px 20px ;
   		overflow: hidden;
		background: #e7eaf0;
		position absolute;
		left :200px
		.outBox{
			height:100%;
			padding-bottom: 0
			&.padding50{
				padding-bottom: 50px;
			}
			.stepBox{
				border-radius: 5px;
				margin-bottom:15px;
				background-color:#fff;
				padding: 17px; 
				padding-left: 40px;
				box-shadow: 0 2px 7px 0 rgba(85, 164, 246, 0.15);
				.title {
					font-weight: 500;
				}
			}
		}

		&.mainForLogin{
			padding:0;
			width: 100%
			left :0
			}
		.content {
			background: #fff;
			height :100%;
			border-radius: 5px;
			padding: 30px;
			border-radius: 5px;
			overflow: auto;
			box-shadow: 0 2px 7px 0 rgba(85, 164, 246, 0.15);
			&.withbar{
				height :calc(100% - 75px);
				}
			&.withbar2{
				height :calc(100% - 115px);
				}
			.body-el-centent {
				min-height: 300px;
				padding: 30px;
			}
			.body-centent {
				// width: 1200px;
				margin:0 auto;
				background-color: #ffffff;
				min-height: 600px;
				padding-top: 0;
				padding-bottom: 50px
			}

			.edit-table, .info-table {
				tr > td:first-child, tr > td.label {
					color: $font-999;
					text-align: right;
					width: 150px;
				}
			}
		}
	}
}

