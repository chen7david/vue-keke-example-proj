// 信息模块
dl.info-mod {
	// margin-bottom 20px
	> dt {
		position: relative;
		height: 30px;

		&:after {
			content: ' ';
			border-bottom: 2px solid $lightblue;
			margin-bottom: -20px;
			display: block;
			width: 100%;
			position: absolute;
			top: 15px;
		}

		span {
			position: absolute;
			background-color: #ffffff;
			padding: 7px 10px;
			left: 5px;
			display: inline-block;
			z-index: 5;
			font-size: 16px;
			color #333;
			font-weight: 700;
		}

		&:before {
			content: ' ';
			width: 5px;
			height: 16px;
			border-radius: 5px;
			display: inline-block;
			background-color: $blue;
			position: absolute;
			top: 50%;
			margin-top: -8px;
			z-index: 10
		}
	}

	> dd {
		padding: 20px 0;
	}
}

