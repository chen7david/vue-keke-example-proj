// 按钮组
.btn {
	border-radius: 4px;
	font-size: 14px;
	padding: 0 20px;
	line-height: 40px;
	display: inline-block;
	// min-width: 110px
	text-align: center;

	&:hover {
		opacity: 0.9;
	}

	&.h60 {
		line-height: 60px;
		font-size: 16px;
	}

	&.h28 {
		line-height: 28px;
		font-size: 12px;
	}
	&.fs14 {
		font-size: 14px;
	}

	&.h22 {
		line-height: 22px;
		font-size: 12px;
	}

	&.default, &.dashed {
		border: 1px #ddd solid;
		color: $font-999;
	}

	&.yellow {
		background-color: $yellow;
		color: #fff;
	}

	&.yellow2 {
		background-color: $org2;
		color: #fff;
	}

	&.blue {
		background-color: $lightblue;
		color: #fff;
	}

	&.blue-color{
	color: $lightblue
		}

	&.green {
		background-color: $green;
		color: #fff;
	}

	&.border {
		background-color: #fff;
		border: 1px $yellow solid;
		color: $yellow;
	}

	&.disabled {
		border-color: #ccc;
		background-color: #ccc;
		cursor: default;
		color: #999;
	}
}

// 密码查看控件样式
.password-btn, .password-btn:hover {
	border: 0;
	background-color: transparent !important;
	font-size: 21px !important;
	color: #333 !important;

	i.icon-eye {
		background: url('../img/password1.png') no-repeat center center;
		width: 30px !important;
		height: 30px !important;

		&.close {
			background-image: url('../img/password2.png');
		}
	}
}

// form
input, textarea, select, button {
	outline: none;
}

input, textarea {
	&:focus {
		border-color: $yellow !important;
	}

	&.error {
		border-color: #ff0000;
	}
}

button {
	border: 0;
}

.el-input-group__prepend input {
	border-width: 0 !important;
}

.btn + .btn {
	margin-left: 40px;
}

textarea {
	max-width: 600px;
	max-height: 400px !important;
}

.iframe-div {
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	opacity: 0.1;
	// filter alpha(opacity=10)
	// -ms-filter  unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=50)')
	// filter progid:DXImageTransform.Microsoft.Alpha(Opacity=50)
}

.edit-table {
	table {
		tr {
			> td.label {
