	}
}

// 表单验证错误信息icon
.el-form-item__error:before {
	content: '';
	background: url('../img/pop_hint.png') no-repeat center center;
	background-size: 100% auto;
	display: inline-block;
	width: 14px;
	height: 14px;
	margin-right: 5px;
	vertical-align: middle;
	position: relative;
	top: -2px;
}

